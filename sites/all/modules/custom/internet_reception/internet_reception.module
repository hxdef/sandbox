<?php/** * @file * Module internet reception. *//** * Implements hook_menu(). */function internet_reception_menu() {  $items = array();  $items['internet-reception'] = array(    'title' => 'Internet reception',    'page callback' => 'drupal_get_form',    'page arguments' => array('internet_reception_content_form'),    'access callback' => TRUE,    'menu_name' => 'main-menu',    'file' => 'includes/internet_reception.form.inc',  );  return $items;}/** * Implements hook_mail(). */function internet_reception_mail($key, &$message, $params) {  switch ($key) {    case 'internet_reception':      $message['subject'] = t('E-mail sent from @site-name', array('@site-name' => variable_get('site_name', 'Drupal')));      $message['body'][] = check_plain($params['full_name']);      $message['body'][] = check_plain($params['age']);      $message['body'][] = check_plain($params['theme']);      $message['body'][] = check_plain($params['message']);      break;  }}